<h2>lista de categorias: </h2>
<hr>
<a href="/categorias/add"><button class="btn btn-success">nova categoria</button></a>

{{#each categoria}}
<div class="card mt-4">
<div class="card-body">
    <h4>{{nome}}</h4>
    <small> slug: {{slug}}</small>
    <br>
    <small>data de criação: {{date}}</small>
    <a href="/categorias/edit/{{_id}}"><button class="btn btn-success mt-4">Editar categoria</button></a>
    <form action="/categoria/deletar" method="POST">
        <input type="hidden" name="id" value="{{_id}}">
        <button type="submit" class="btn btn-danger">Deletar</button>
    </form>
     <a href="/postagens/add">  <button class="btn btn-success mt-4" type="submit">postar categoria</button></a>
</div>

</div>
{{else}}
<H3 class="mt-3">nenhuma categoria resgistrada</H3>
{{/each}}